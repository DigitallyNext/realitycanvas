generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id            String   @id @default(uuid())
  title         String
  description   String
  price         Int
  address       String
  location      String
  currency      String   @default("USD")
  featuredImage String
  galleryImages String[] // Store additional images
  beds          Int      @default(0)
  baths         Int      @default(0)
  area          Int      @default(0)
  createdAt     DateTime @default(now())
}
